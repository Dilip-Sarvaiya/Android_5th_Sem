<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/accent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="679dp"
                android:layout_height="260dp"
                android:layout_marginBottom="15dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/enrl_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/hd"
                tools:srcCompat="@drawable/hd" />

            <TextView
                android:id="@+id/enrl_no"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"

                android:text="@string/enrl_no"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.517"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/first_name"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/fname"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enrl_no" />

            <TextView
                android:id="@+id/middle_name"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mname"
                app:layout_constraintTop_toBottomOf="@+id/first_name"
                tools:layout_editor_absoluteX="39dp" />

            <TextView
                android:id="@+id/last_name"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lname"
                app:layout_constraintTop_toBottomOf="@+id/middle_name"
                tools:layout_editor_absoluteX="31dp" />

            <TextView
                android:id="@+id/email"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                app:layout_constraintTop_toBottomOf="@+id/last_name"
                tools:layout_editor_absoluteX="15dp" />

            <TextView
                android:id="@+id/pass"
                style="@style/text_styles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/password"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email" />

            <TextView
                android:id="@+id/gender"
                style="@style/text_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="150dp"
                android:text="@string/gender"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/text"
                style="@style/text_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="164dp"
                android:layout_marginBottom="150dp"
                android:text="@string/city"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pass"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>